<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AgentApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- ActionBar styling -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="Theme.AgentApp" parent="Base.Theme.AgentApp" />
    <!-- ActionBar Style -->
    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">4dp</item>
    </style>
    <!-- Text Styles -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="borderWidth">1dp</item>
        <item name="strokeColor">@color/primary</item>
    </style>
</resources>